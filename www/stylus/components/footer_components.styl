.footer
  background url("../img/svg/footer_background.svg") no-repeat, color-background-footer
  color color-white
  padding-top 8.5em
  &__section
    &__title
      font-size: 2.62em
      font-weight 500
      margin-bottom 0.847em
  &__help-us
    &__link
      font-size: 2.06em
      background-color: color-main-yellow
      border-radius 3px
      margin-bottom 0.971em
      padding 0.395em 1.01em
      transition background-color .3s ease-out
      &:focus
      &:hover
        background-color color-hover
        transition background-color .3s ease-out
  &__contact-us
    &__item
      font-size: 1.86em
      margin-bottom: 1.2em
      width: 300px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      text-align: left;
      &:before
        content: "\e91c"
        display: inline-block;
        font-family "glyphs"
        font-size .8em
        margin-right .3em
  &__social
    &__item:before
      color #FFF
      font-size: 4.2em
      font-family: glyphs
      margin-right 0.357em
      transition color .2s ease-out
    &__item:hover:before
      color: color-hover
      transition color .2s ease-out
    &__item-fb:before
      content "\e91e"
    &__item-tw:before
      content "\e91d"
    &__item-inst:before
      content "\e900"
    &__item-vim:before
      content "\e91f"
    &__item-yout:before
      content "\e920"
      margin-right 0

.footer__last-article__item
  font-size: 1.86em
  margin-bottom: 1.2em
  width: 300px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;

.footer__newsletter__title
  margin-bottom .2em

.visuallyhidden
  color transparent

+media-query( only screen, max-width 970px )
  .footer
    height: 30em;
    padding-top 6em
    &__help-us
      width 25em
    &__section
      &__title
        font-size: 1.82em
    &__help-us__link
      font-size: 1.5em
      border 1px solid color-main-yellow
    &__contact-us
      margin-right: 4em
      &__item
        font-size 1.5em
    &__section__newsletter-input
      font-size: 1.5em
    &__section__newsletter-submit
      height 30px
      width 30px
      top 0.9em
    &__social__item:before
      font-size: 3em

+media-query( only screen, max-width 712px )
  .footer
    height auto
    background color-background-footer
    &__container
      max-width 28em
  .footer__help-us
    display block
    float none
    text-align center
    margin 0 0 4em 0
    &__link
      width 220px
  .footer__contact-us
    display block
    max-width 22em
    text-align center
    margin 0 0 4em 0
  .footer__section__newsletter-social-container
    float none
    display block
    text-align center
    padding-bottom 7em
