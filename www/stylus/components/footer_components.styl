.footer
  background url("../img/svg/footer_background.svg") no-repeat, color-background-footer
  color color-white
  padding-top 8.5em
  &__section
    &__title
      font-size: 2.62em
      font-weight 500
      margin-bottom 0.847em
  &__help-us
    &__link
      font-size: 2.06em
      border 2px solid color-main-yellow
      border-radius 3px
      margin-bottom 0.971em
      padding 0.345em 0.991em
      transition background-color .3s ease-out
      &:focus
      &:hover
        background-color color-main-yellow
        transition background-color .3s ease-out
  &__contact-us
    &__item
      font-size: 2.06em
      margin-bottom 0.971em
      &:before
        font-family: glyphs
        font-size: 1em
        margin-right 0.485em
      &-tel:before
        content "\e91b"
      &-wa:before
        content "\e91a"
      &-form:before
        content "\e91c"
        font-size: .8em
  &__section
    &__newsletter-label
      display none
    &__newsletter-input
      background-color #243445
      border none
      outline none
      font-size: 2.1em
      color #A6ACB3
      letter-spacing .67px
      font-weight: 300
      padding 0.388em .826em 0.3888em 0.647em
    &__newsletter-submit
      position: relative
      top 1.10em
      right: .3em
  &__social
    &__item:before
      color color-white
      font-size: 4.2em
      font-family: glyphs
      margin-right 0.357em
      transition color .3s ease-out
    &__item:hover:before
      color: color-white - 20%
      transition color .3s ease-out
    &__item-fb:before
      content "\e91e"
    &__item-tw:before
      content "\e91d"
    &__item-inst:before
      content "\e900"
    &__item-vim:before
      content "\e91f"
    &__item-yout:before
      content "\e920"
      margin-right 0

.footer__newsletter__title
  margin-bottom .2em

.visuallyhidden
  color transparent

+media-query( only screen, max-width 970px )
  .footer
    height: 30em;
    padding-top 6em
    &__help-us
      width 25em
    &__section
      &__title
        font-size: 1.82em
    &__help-us__link
      font-size: 1.5em
      border 1px solid color-main-yellow
    &__contact-us
      margin-right: 4em
      &__item
        font-size 1.5em
    &__section__newsletter-input
      font-size: 1.5em
    &__section__newsletter-submit
      height 30px
      width 30px
      top 0.9em
    &__social__item:before
      font-size: 3em

+media-query( only screen, max-width 712px )
  .footer
    height auto
    background color-background-footer
    &__container
      max-width 28em
  .footer__help-us
    display block
    float none
    text-align center
    margin 0 0 4em 0
    &__link
      width 220px
  .footer__contact-us
    display block
    max-width 22em
    text-align center
    margin 0 0 4em 0
  .footer__section__newsletter-social-container
    float none
    display block
    text-align center
    padding-bottom 7em
