/************************************\
  NAV PRINCPALE
\************************************/

.header
  &__logo
    retina-image( "../img/png/Baobab_logo.png", 80px 64px, "@2x" );
    background-repeat no-repeat
    background-position center center
    color transparent

.header > .menu
  background-color #2E4157
.header-main > .menu
  background-color rgba(46, 65, 87, 0.8)
.menu
  &__lang
    display none
  &__bloc
    display inline-block
  &__icon
    display none
    &__label
      display none
  &__link
    margin-right 5em
  &__link--last
    margin-right 0
  &__item
    color color-white
    font-size 1.62em
    text-align center
    margin-top 1em
    &:before
      font-family glyphs
      font-size 1.3em
      display block
      margin-bottom .5em
      transition trans
    &-home:before
      content "\e917";
    &-projet:before
      content "\e901";
    &-news:before
      content "\e905";
    &-prod:before
      content "\e904";
    &-pics:before
      content "\e903";
    &-tutos:before
      content "\e902";
    &-contact:before
      content "\e91c";
    &:hover:before
      transition trans
      color color-main-yellow

/************************************\
    HEADER IMG
\************************************/


.header-main
  background url("../img/png/pattern.png") repeat, url("../img/jpg/background_home_header.jpg") no-repeat center center/cover

.header-main > .header__title-main
  retina-image( "../img/png/title_homebck.png", contain, "@2x" );
  background-repeat no-repeat
  background-position center center
  width 80%
.header__title
  &__main
    display none // Modification client, change de police, import d'une image sur le fond.
  &__sub
    display none


/************************************\
    BOTTOM HEADER
\************************************/

.bottom-header
  background: rgba(0,0,0,0.65);
  &__button
    color color-white
    border 1px solid color-main-yellow
    border-radius 3px
    padding 0.467em 0.701em
    font-size: 1.3em
    transition trans
    &:nth-child(1)
      margin-left 2.5em
    &:nth-child(2)
      margin-left 1.460em
    &:hover
    &:focus
      background-color color-main-yellow
      transition trans
  &__text
    color color-white
    font-size: 1.3em
    margin-left 1.753em
    line-height 1.25em

.menu
  &__lang__deskopt
    color white
    position: absolute
    left: 0
    background-color color-blue - 30%
    &__item
      display block
      margin-bottom .41em
      font-size: 1.3em
      background-color color-blue - 30%
      padding 5px 5px
      transition trans
      &:hover
      &:focus
        background-color color-blue
        transition trans
    &__item:last-child
      margin-bottom 0
