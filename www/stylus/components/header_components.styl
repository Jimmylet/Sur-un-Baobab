@import "kouto-swiss"

.menu
  background: #FFF
  /*position fixed*/
  z-index: 2
  width 100%
  top: 0em
  &__lang
    display none
  &__bloc
    display inline-block
  &__icon
    display none
    &__label
      display none
  &__link
    margin-right 5em
  &__link--last
    margin-right 0
  &__item
    color color-background-footer
    font-size 1.62em
    text-align center
    margin-top .45em
    transition color .3s ease-out
    &:hover
    &:focus
      color color-hover
      transition color .3s ease-out
    &:before
      font-family iconsmenu
      font-size 2em
      display block
      margin-bottom .5em
    &--active
      color: color-hover
    &-home:before
      content "\e904";
    &-projet:before
      content "\e906";
    &-news:before
      content "\e903";
    &-prod:before
      content "\e900";
    &-pics:before
      content "\e901";
    &-tutos:before
      content "\e902";
    &-contact:before
      content "\e905";
    &-partner:before
      content: "\e902";
    &:hover:before
    &:focus:before
      transition color .3s ease-out
      color color-hover


.menu
  &__lang__deskopt
    color color-background-footer
    position: absolute
    top 1.3em
    right: 0em
    background-color rgba(255, 255, 255, 0.94)
    &__item
      display block
      margin-bottom .41em
      font-size: 1.3em
      background-color rgba(255, 255, 255, 0.94)
      padding 5px 5px
      transition trans
      &:hover
      &:focus
        text-decoration: underline;
    &__item:last-child
      margin-bottom 0

.header__lang
  width 100%
  height 30px
  z-index 20
  background-color color-background-footer
  color color-white
  font-size 1.2em
  text-transform: uppercase
  letter-spacing .5px
  text-align right
  padding 0 1.5em
  &__link
    display inline-block
    height 100%
    padding .8em 1em 0 1em
    font-weight: 600
    background-color color-background-footer
    transition background-color .3s ease-out
    &:hover
    &:focus
      background-color color-background-footer + 20%
      transition background-color .3s ease-out

.header-main
  .header__lang
    position absolute
    top 0
    width 100%
    background-color #F9F7F1
    &__link
      background-color #F9F7F1
      color color-text-articles
      margin-left .4em
      &:hover
      &:focus
        /*background-color #F9F7F1
        transition background-color .3s ease-out*/
        text-decoration underline


@media screen and ( max-width: 1357px )
  .header-main
    .header__lang
      padding 0
      &__link
        padding .8em 1em 0 1em



.minheader
  background: rgba(255, 255, 255, 0.94);
  padding: 1em 0 1.4em 0
  transition: all .3s ease
  .menu__item
    &:before
      display: none
  .menu__lang__deskopt
    display: none


.no-index
  .site-content
    position relative
    /*bottom -12em*/

.home
  .menu
    position relative
    z-index: 99
    background: color-white

.home
  .headerwhite
    background: rgba(255, 255, 255, 0.94);
    position: fixed;
    transition: background .3s ease
  .withfixed
    position relative
    .intro-text__title
      padding-top: 4.1em


.home
  .headerwhite--min
    padding: 1em 0 1.4em 0
    transition: all .3s ease
    .menu__item
      &:before
        display: none

+media-query( only screen, max-width 1000px )
  .subheader
    display none

  .menu
    position: relative
    padding 0
    &__icon
      display none
    &__icon-bg
      position: absolute
      z-index: 1
      top: 0em
      width: 100%
      height: 60px
      background: color-navres-menu
    &__icon__label
      display inline-block
      position: absolute
      z-index 2
      right: 3.3em
      top: 1.3em
      height 60px
      width 60px
      color transparent
      cursor pointer
      & span
      & span:before
      & span:after
        position: absolute;
        width: 30px;
        height: 4px;
        background-color: #ffffff;
        border-radius: 5px;
      & span
        left: 50px
        top: 17px
        transform: translateX(-50%) translateY(-50%);
        transition: background-color 0.2s;
      & span:before
      & span:after
        content: '';
        top: 0;
        left: 0;
        backface-visibility: hidden;
        transition: transform 0.2s;
      & span:before
        transform: translateY(-9px);
      & span:after
        transform: translateY(9px);
    &__lang
      // display inline-block
      display none
      color white
      margin-top 10px
      &__item
        background-color color-blue - 30%
        font-size: 1.4em
        padding 5px 5px
        transition background-color .3s ease
        &:hover
        &:focus
          background-color color-blue
          transition background-color .3s ease
    &__lang__deskopt
      display none
    &__item
      color #FFF
      text-align: left;
      width: 250px
      margin-bottom: 15px
      &:before
        display: inline-block;
        font-size 20px
        width: 25px
        text-align: left;
        margin-right 15px
      &:hover:before
      &:focus:before
      &:active:before
        color #FFF
      &:hover
      &:focus
      &:active
        color #FFF
    &__container
      position: relative
      display: block;
      height: 0;
      overflow hidden
      width 100%;
      top 6em;
      text-align center
      background-color color-blue
      margin-right 0
      z-index 20
      transition: trans
      flex-direction column
    &__link
      margin-right 0
      display block
      font-size: 16.2px
      padding-top .7em
      &:hover
        background-color: color-blue + 20%
  .menu__icon:checked
    transition: trans
  .menu__icon:checked ~ .menu__container
    overflow visible;
    height: auto;
  .site-content
    transition: trans

  .site-container
    overflow: hidden
    height: 100%
  .site-content
    height: 100%
    overflow-scrolling touch

  .home
    .headerwhite
      position: relative;
      margin-bottom 4.1em
    .withfixed
      position relative
      .intro-text__title
        padding-top: 2.1em

  .intro-text
    margin-top 4em



.with--sidebar
  .site-content
    transition: trans
  .menu__container
    overflow: hidden
    height: 499px;
    transition: trans
  .menu__icon__label
    & span
      background-color: transparent;
    & span:before
      transform: rotate(-45deg);
    & span:after
      transform: rotate(45deg);
