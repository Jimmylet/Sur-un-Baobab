/************************************\
  MENU PRINCIPAL RESPONSIVE
\************************************/

+media-query( only screen, max-width 1064px )
  .menu
    &__link
      margin-right 3em
      &--last
        margin-right 0



+media-query( only screen, max-width 972px )
  .menu
    &__item
      font-size: 1.4em
      margin-top 1.5em

+media-query( only screen, max-width 885px )
  .subheader
    display none
  .header
    &__logo
      margin-left 2.4em
  .menu
    position: relative
    padding 0
    &__icon
      display none
    &__icon-bg
      position: absolute
      z-index: 1
      top: 1em
      right: 3em
      width: 60px
      height: 60px
      border-radius: 30px
      border 1px solid color-main-yellow
      background: color-navres-menu
    &__icon__label
      display inline-block
      position: absolute
      z-index 2
      right: 3.3em
      top: 2.3em
      height 60px
      width 60px
      color transparent
      cursor pointer
      & span
      & span:before
      & span:after
        position: absolute;
        width: 20px;
        height: 2px;
        background-color: #ffffff;
      & span
        left: 34px
        top: 17px
        transform: translateX(-50%) translateY(-50%);
        transition: background-color 0.2s;
      & span:before
      & span:after
        content: '';
        top: 0;
        left: 0;
        backface-visibility: hidden;
        transition: transform 0.2s;
      & span:before
        transform: translateY(-6px);
      & span:after
        transform: translateY(6px);
    &__lang
      display inline-block
      color white
      margin-top 10px
      &__item
        background-color color-blue - 30%
        font-size: 1.4em
        padding 5px 5px
        transition background-color .3s ease
        &:hover
        &:focus
          background-color color-blue
          transition background-color .3s ease
    &__lang__deskopt
      display none
    &__container
      position: relative
      width 25em
      top 0
      text-align center
      background-color color-blue - 20%
      margin-right 0
      z-index 20
      position: absolute
      right: 0
      top: 0
      bottom: 0
      overflow-y: scroll
      flex-direction column
    &__link
      margin-right 0
      display block
      font-size: 16.2px
  .menu__icon:checked
    transform: translateX(-250px);
    transition: trans
  .menu__icon:checked ~ .menu__container
    transform: translateX(0px);
    z-index: 10;
    overflow-y: visible;
  .site-pusher
    height: 100%
    transition trans
    transform translateX(0px)
  .site-container
    overflow: hidden
    height: 100%
  .site-content
    height: 100%
    overflow-scrolling touch
  /*.header
    position static*/
  .menu__container
    transform translateX(250px)
    height: 100vh

.with--sidebar
  overflow hidden
  height 100%
  .site-pusher
    transform translateX(-250px)
  .site-cache
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    transition .3s linear
    background-color rgba(0,0,0,.6)
  .menu__icon__label
    & span
      background-color: transparent;
    & span:before
      transform: rotate(-45deg);
    & span:after
      transform: rotate(45deg);

