@import "kouto-swiss"

/************************************\
  IMAGE D'INTRO - EN SAVOIR PLUS
\************************************/

.intro-img
  retina-image( "../img/jpg/baobab_about4.jpg", cover, "@2x");
  background-position center center
  text-align center
  padding 1.5em 2.5em
  &__title
    font-weight: bold
    font-size: 3.33em
    color color-white
    text-transform uppercase
    letter-spacing 2px
    border 1px solid color-white
    padding 1.742em 1.9em
  &__button
    font-size: 2.62em
    color color-white
    padding 0.458em 1.145em
    border 2px solid color-main-yellow
    border-radius 3px
    transition trans
    &:hover
      background-color color-main-yellow
      transition trans


/************************************\
    TEXT INTRO - Rencontrer,animerâ€¦
\************************************/

.intro-text
  &__title
    font-weight bold
    font-size 4.24em
    color color-main-yellow
    margin-top: 1.769em
    text-align center
    &:after
      content "";
      display block
      width 615px
      height 24px
      retina-image("../img/png/text-intro_geometric_subtitle.png", 615px 24px, "@2x" )
      background-repeat no-repeat
      margin 0.236em auto 0.849em auto
  &__paragraph
    font-size: 2.62em
    max-width 20.344em
    margin-bottom 0.763em

/************************************\
  IMGS SurunBaobab
\************************************/

.img-baobab
  retina-image("../img/jpg/img_deco.jpg", cover,"@2x" )
  background-position center center
  &__title
    background-color rgba(224, 195, 49, .9);
    padding 0 5em
    &__img
      retina-image("../img/png/baobab_text.png", contain, "@2x")
      background-repeat no-repeat
      background-position center 35%
      height: 100%

/************************************\
  ARTICLES NEWS
\************************************/

.last-news
  background-color color-grey-background
  &__title
    font-weight: bold
    font-size: 3.76em
    color color-title-article
    padding-top 3.290em
  &__newsletters
    display block
    font-size: 1.62em
    text-transform uppercase
    margin-left 6em
    margin-top .1em
    margin-bottom 1.852em
    & a
      text-decoration underline

.last-news__articles
  padding 0 2em
  &__top
    background-color color-white
    &__title
      font-weight: bold
      color color-title-article
      font-size: 2.62em
      text-align right
      &:after
        content ""
        display inline-block
        width 8.015em
        height 1px
        background-color #979797
        margin 1.049em 0
        text-align right
    &__intro
      font-size: 1.43em
      color #000
      text-align right
      display block
      line-height 1.3em
    &__link
      font-size: 1.27em
      padding 0.551em 2.520em
      border 2px solid color-main-yellow
      border-radius 2px
      letter-spacing .5px
      transition trans
      &:hover
      &:focus
        background-color color-main-yellow
        transition trans
        color color-white
  &__container-text
    padding 2em


.article__vignette
  display inline-block
  &__title
    color color-white
    font-size: 1.62em
    font-weight: bold
    line-height 1.15em
  &__container
    background-color rgba(0,0,0,.5)
    padding 2em
  &__more
    background-color rgba(181,181,181,.5)
  &__img
    width 100%
    object-fit: cover;
    transition trans
  & svg
    transform scale(1)
    transition trans



.article__vignette:hover .article__vignette__more svg
  transform scale(1.6)
  transform trans
  & g
    stroke #f1f1f1

.article__vignette:hover img
  transform scale(1.2) rotate(2deg)
  filter grayscale(100%)
  transition trans

  /************************************\
      DONATE
  \************************************/

.donate
  position: relative
  background url("../img/jpg/home_donate.jpg") no-repeat center center/cover
  &__img
    margin-bottom: 1.5em
  &__text1
    display block
    font-size 5em
    color color-white
    font-weight: bold
  &__text2
    display block
    color color-white
    font-weight: bold
    text-transform uppercase
    font-size: 9.05em
    line-height 0.8em
    &:after
      content "";
      margin: 0 auto
      margin-top: 0.331em
      display block
      width 4.420em
      height 1px
      background-color color-white
  &__button
    display inline-block
    margin-top 3.81em
    color color-white
    font-size: 2.62em
    padding 0.495em 2.286em 0.495em 2.286em
    letter-spacing .5px
    text-transform uppercase
    border 1px solid color-main-yellow
    border-radius 3px
    background-color color-main-yellow
    transition trans
    &:focus
    &:hover
      background-color color-main-yellow + 20%
      border 1px solid color-main-yellow + 20%
      transition trans

.follow-us
  background-color color-white
  position: relative
  bottom: -9.5em
  &__text
    display block
    font-size: 2.62em
    font-weight bold
    color #000;
    padding-top 1.145em
    margin-bottom 0.573em
    text-transform: uppercase
    letter-spacing -.5px
  &__item
    margin-right 1.5em
    &:last-child
      margin-right 0
    &:after
      font-family glyphs
      font-size 3em
      transition trans
    &-fb:after
      content "\e91e"
      color #3B5A99
    &-fb:hover:after
      color #3B5A99 - 30%
      transition trans
    &-tw:after
      content "\e91d"
      color #5FA9DE
    &-tw:hover:after
      color #5fa9de - 30%
      transition trans
    &-inst:after
      content "\e921"
      color #E3DFD4
    &-inst:hover:after
      color #E3DFD4 - 30%
      transition trans
    &-vim:after
      content "\e91f"
      color #000
    &-vim:hover:after
      color #000 + 30%
      transition trans
    &-yout:after
      content "\e920"
      color #A60D1D
    &-yout:hover:after
      color #A60D1D - 30%
      transition trans

/************************************\
    DERNIERES PRODUCTIONS
\************************************/

.last-prod
  text-align center
  &__item
    z-index 1;
    overflow hidden
    width 40.8em
    height 57.6em
    position: relative
    &__link
      color transparent
    &__hovereffect
      width: 100%
      height: 100%
      position: absolute
      top: 0
      background: rgba(7,7,7,.0);
      transition .3s ease-in
      &:before
        content "\e922"
        font-family glyphs
        color transparent
        font-size: 10em
        display block
        position: absolute
        top: 40%
        left: 1.55em
        transition .5s ease
      &:hover:before
        color #FFF
        transition .5s ease
      &:after
        content "Voir le film"
        font-size: 2em
        display block
        color transparent
        position: absolute
        top: 53%
        left: 7.7em
        transition .5s ease
      &:hover:after
        color #fff;
    &__img
      position absolute
      left: 0
      transition 3s ease
      z-index -1

.last-prod__button
  font-size: 2.62em
  display inline-block
  color color-title-article
  padding 0.458em 1.145em
  border 2px solid color-main-yellow
  border-radius 3px
  transition trans
  margin-top 1.908em
  margin-bottom 4.504em
  &:hover
  &:focus
    background-color color-main-yellow
    color color-white
    transition trans

.last-prod__item:hover .last-prod__item__hovereffect
  background: rgba(7,7,7,.5);
  transition .5s ease


