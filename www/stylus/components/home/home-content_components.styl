.intro-text
  text-align center
  &__title
    font-family handofseanfont
    font-size 4.24em
    color color-main-yellow
    margin-top: 1.769em
    text-align center
    &:after
      content "";
      display block
      width 548px
      height 8px
      retina-image("../img/png/intro-text_line.png", 548px 8px, "@2x" )
      background-repeat no-repeat
      margin 0.236em auto 0.849em auto
  &__paragraph
    font-size: 2.22em
    max-width 20.344em
    margin-bottom 0.763em
    text-align left
    line-height 1.3em
  &__button
    display: inline-block
    margin 1.4em auto 1.4em auto
    font-size: 2.62em
    color color-text-articles
    padding 0.751em 2.02em
    border 2px solid color-main-yellow
    border-radius 3px
    transition trans
    &:hover
      background-color color-main-yellow
      transition trans
      color white

