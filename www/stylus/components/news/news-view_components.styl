.news-view
  &__img-container
    border-radius 10px
    overflow hidden
    max-width: 100%
    height: auto
  &__img
    max-width 100%
    height auto
  &__title
    font-size: 3.33em
    font-weight: bold
    color #363636
    text-transform: uppercase
    margin-top 0.901em // 30px
    margin-bottom 0.601em // 20px
    line-height: 1.25em
  &__paragraph
    font-size: 2.058em
    line-height 1.4em
    margin-bottom 0.997em // 20px
  &__subtitle
    display inline-block
    font-weight: bold
    font-size: 2.618em
    text-transform: none
    text-align: left
    color: #363636
    margin-top 1.528em // 40px
    &:after
      content: ""
      display: block
      margin: 5px 0 20px 0
      max-width: 260px
      height: 4px
      background-color: #f5f5f5
  &__tags
    display block
    margin-top 20px
    font-size: 1.435em
    color: #717171
    & a:hover
    & a:focus
      text-decoration underline
.news-view__link
  margin-right 10px
.news-view__partager
  margin-top: 4em
.news__view-partager__text
  font-size: 1.5em
  font-weight: 500
  position: relative
  bottom: 8px
  margin-right 1em // 15px

+media-query( only screen, max-width 573px )
  .news-view
    &__title
      font-size: 2em
    &__paragraph
      font-size: 1.6em