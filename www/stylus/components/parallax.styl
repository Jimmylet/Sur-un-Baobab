/**************************\
  Parallax effect
/**************************/

.parallax
  height: 736px;
  position: relative;
  &__layer
    background-position: bottom center;
    background-repeat: no-repeat;
    background-size: 1400px
    width: 100%;
    height: 736px;
    position: fixed;
    z-index: -1;
    &-01
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_15.svg');
    &-02
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_14.svg');
      animation: cloudAnimation2 200s .5s ease infinite
    &-03
      {parallax3}
      animation: cloudAnimation1 200s 1s linear infinite;
    &-04
      {parallax4}
    &-05
      {parallax5}
    &-06
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_10.svg');
    &-07
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_09.svg');
    &-08
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_08.svg');
    &-09
      {parallax9}
    &-10
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_06.svg');
    &-11
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_05.svg');
    &-12
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_04.svg');
    &-13
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_03.svg');
    &-14
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_02.svg');
    &-15
      background-image: url('../img/parallax/SurUnBaobab_Parrallax_01.svg');
      background-size: 1402px


.fix-parallax
  height: 736px
  width: 100%
  {parallaxheader}
  background-size: 1402px
  background-position: bottom center;
  background-repeat: no-repeat;
  z-index: -1




.intro-text
  background-color: color-white;

.site-content
  width: 100%;


/************************************\
  ANIMATION CLOUD
\************************************/

@keyframes cloudAnimation1 {
  0%, 100% {
    transform: translateX(0)
  }
  50% {
    transform: translateX(-800px)
  }
}

@keyframes cloudAnimation2 {
  0%, 100% {
    transform: translateX(0)
  }
  50% {
    transform: translateX(800px)
  }
}


