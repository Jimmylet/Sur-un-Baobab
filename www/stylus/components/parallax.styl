/**************************\
  Parallax effect
/**************************/

.parallax
  height: 800px;
  position: relative;
  &__layer
    background-position: top center;
    background-size: auto;
    background-repeat: no-repeat;
    width: 100%;
    height: 800px;
    position: fixed;
    z-index: -1;
    background-size: cover;
    &-01
      background-image: url('../img/parallax/SurUnBaobab_TestParallaxe_08_compressed.svg');
    &-02
      background-image: url('../img/parallax/SurUnBaobab_TestParallaxe_07_compressed.svg');
    &-03
      background-image: url('../img/parallax/SurUnBaobab_TestParallaxe_04_compressed.svg');
    &-04
      background-image: url('../img/parallax/SurUnBaobab_TestParallaxe_03_compressed.svg');
    &-05
      background-image: url('../img/parallax/SurUnBaobab_TestParallaxe_02_compressed.svg');
    &-07
      background-image: url('../img/parallax/SurUnBaobab_TestParallaxe_01_compressed.svg');
    &-08
      background-image: url('../img/parallax/SurUnBaobab_TestParallaxe_05_compressed.svg');
