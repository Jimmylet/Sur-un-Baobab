.desc-projet
  &__subtitle
    display block
    text-align center
    font-size: 2.95em
    letter-spacing 2px
    color color-button + 40%
    text-transform uppercase
    margin-bottom .3em
    font-family handofseanfont
  &__title
    display: block
    margin-bottom: .417em
    text-align: center
    font-size: 4.8em
    text-transform uppercase
    & i
      color color-main-yellow
    & strong
      font-weight: bold
  &__min-desc
    display block
    margin 0 auto 2.586em auto
    text-align center
    font-size: 2.32em
    line-height 1.3em
    max-width 39em
    color #5C5C5C
  &__main-img
    display block
    margin-bottom: 4em
    max-width 100%
    height auto
  &__desc:last-child
    margin-bottom 0
  &__sub-img
    display block
    float right
    max-width 100%
    height auto
  &__sousrubrique
    display block
    margin-top 1.6em
    font-family handofseanfont
    font-size: 3.76em
    text-transform none
    text-align left
    color #363636
    &:after
      content ""
      display block
      margin 10px 0 30px 0
      max-width 260px
      height 4px
      background-color #CACACA

/************************************\
  QUOTE
\************************************/

.desc-projet__quote
  margin-top 4em
  background-image url("../img/jpg/desc-projet_bckgquote.jpg")
  background-repeat no-repeat
  background-size cover
  background-position center center
  padding 8.3em 2.5em 8.3em
  &-1
  &-2
    display block
    text-align center
    color #FFF
    & strong
      font-weight bold
  &-1
    font-size: 3.76em // 37.6px
    margin-bottom: 0.266em // 10px
  &-2
    font-size 2.62em
