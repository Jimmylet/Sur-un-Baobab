.breadcrumb
  margin: 3.5em 0 6em 6.1em
  &__link
    display inline-block
    &__text
      font-size: 1.62em
      color color-blue
      display inline-block
      margin 0 0.617em
      transition trans
      line-height 1.5em
      &:hover
      &:focus
        color color-blue + 20%
        transition trans

.breadcrumb__link:after
  display inline-block
  content ""
  background-image url("../img/svg/arrowbreadcrump.svg")
  background-repeat no-repeat
  width 12px
  height 21px
  position: relative
  top 6px
.breadcrumb__link:first-child:before
  font-family: glyphs
  content "\e917"
  font-size: 1.7em
  position: relative
  right -3px
.breadcrumb__link:last-child:after
  display none

+media-query( only screen, max-width 807px )
  .breadcrumb
    margin 3.5em 0 6em 2.5em