.footer
  height 40em
  position: relative
  &__container
    max-width 100em
    margin: 0 auto
    text-align center
    padding 0 1em
    &:after
      content: "";
      display: block;
      clear: both;
  &__help-us
    display inline-block
    width 35em
    float: left
    text-align left
    & a
      display inline-block
  &__contact-us
    display inline-block
    white-space: nowrap
    overflow: hidden
    margin-right 5.8em
    & a
      display block
  &__social
    margin-top 15px
  &__copyright
    position: absolute
    width: 100%
    bottom: 20px
    &__container
      text-align center


.footer__section__newsletter-social-container
  text-align left
  float right
