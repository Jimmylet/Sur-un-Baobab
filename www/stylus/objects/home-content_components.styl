.intro-img
  height 56em
  &__title
    display inline-block
    margin-top 4.8em
  &__button
    display inline-block
    margin-top 1.527em

.intro-text
  padding 0 2em 7.5em
  &__container
    max-width 76em
    margin 0 auto
    &:after
      content: "";
      display: block;
      clear: both;
  &__paragraph
    float left
  &__img
    float right


.img-baobab
  position: relative
  height 70em
  white-space nowrap
  position relative
  &__title
    width 70%
    height 75%
    position absolute
    left 15%
    top 50%
    transform translateY(-50%)
  &__deco
    margin 0 auto
    display block
    position: relative
    top 466px


/************************************\
  ARTICLES NEWS
\************************************/

.last-news
  margin 0 auto
  text-align center
  &__line1
    position: relative
    top -1px
  &__line2
    position: relative
    top 2px
  &__articles__img
    float right
    & img
      display block
  &__articles__top
    margin 0 auto
    height 30.3em
    width: 90em
    &:after
      content: "";
      display: block;
      clear: both;
    &__link
      position: absolute
      right 1.6em
      bottom 2em
    &__intro
      width 350px
      float right
  &__articles__img
    max-width 45em
    overflow hidden

.last-news__articles__container-text
  width 44.9em
  position: relative
  height: 100%
